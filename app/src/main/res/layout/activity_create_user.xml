<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="br.edu.ifsp.mybooks.activities.CreateUserActivity">

    <TextView
        android:id="@+id/LabelCreateUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="CADASTRO DE USUÃRIO"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/goBackButtonCreateUser"
        android:layout_width="15dp"
        android:layout_height="32dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/icon_back" />

    <EditText
        android:id="@+id/UserEmailCreateUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goBackButtonCreateUser"
        android:hint="E-mail"
        android:singleLine="true" />

    <EditText
        android:id="@+id/UserPasswordCreateUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/UserEmailCreateUser"
        android:layout_marginTop="30dp"
        android:hint="Senha"
        android:inputType="textPassword"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/UserPasswordCreateUser"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/ButtonCancelRegister"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="#e8e8e8"
            android:fontFamily="sans-serif-black"
            android:padding="15dp"
            android:text="Cancelar"
            android:textSize="16dp" />

        <Button
            android:id="@+id/ButtonDoneRegister"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ButtonRegisterManuallyIsbn"
            android:background="#e8e8e8"
            android:fontFamily="sans-serif-black"
            android:padding="15dp"
            android:text="Confirmar"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp" />

    </LinearLayout>

</RelativeLayout>
