<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="br.edu.ifsp.mybooks.activities.ViewBookDetailActivity">

    <ImageView
        android:id="@+id/goBackButtonDetails"
        android:layout_width="15dp"
        android:layout_height="32dp"
        android:src="@drawable/icon_back"/>

    <ImageView
        android:id="@+id/bookImageDetails"
        android:layout_margin="30dp"
        android:layout_below="@+id/goBackButtonDetails"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:src="@drawable/my_books_background"/>

</android.support.constraint.ConstraintLayout>
